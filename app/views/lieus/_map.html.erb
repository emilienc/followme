<%= content_for :head do%>
<meta name="viewport" content="initial-scale=1.0, user-scalable=no" />
<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
 
<script type="text/javascript">
 

function display(){
		<% @lieus.each do |lieu| %> 
        var m = map.addMarker(<%=lieu.lat%>,<%=lieu.lng%>);
	  	map.addWindow(m,"<%=lieu.created_at%>");
	  <%end%>
	}

function initialize(){
	 
	  map = new CMap();
      map.create('map',<%=@lieus[0].lat%>,<%=@lieus[0].lng%>);   
      display();
	  map.detectBrowser('map');
	  setTimeout("display();",15000);
	}      
</script>
<%end%>